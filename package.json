{
  "name": "tw-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap",
    "publish": "yarn bootstrap && yarn build && lerna publish -- --access public",
    "build": "lerna run build",
    "nuke": "rm -rf node_modules; for d in packages/*/node_modules; do echo $d; rm -rf $d; done",
    "prettify": "prettier --parser typescript --single-quote --write 'packages/**/*.{ts,tsx}'",
    "check-prettier": "prettier --parser typescript --single-quote --list-different 'packages/**/*.{ts,tsx}'",
    "lint": "lerna run lint"
  },
  "devDependencies": {
    "lerna": "^3.16.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
